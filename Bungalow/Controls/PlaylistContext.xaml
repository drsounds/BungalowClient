<UserControl
    x:Class="Bungalow.Controls.PlaylistContext"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:spotify="using:Spotify.Web.Models"
    xmlns:bungalow="using:Bungalow.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ListView ItemsSource="{x:Bind Playlists.Items}">

        <ListView.ItemTemplate>
            <DataTemplate x:DataType="spotify:Playlist">
                <bungalow:PlaylistControl Playlist="{x:Bind}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
