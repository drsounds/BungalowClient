            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>-->
    <mt:DataGrid ItemsSource="{x:Bind Tracks.Items}">
        <mt:DataGrid.Columns>
            <mt:DataGridTextColumn Width="200" Header="Title" 
                  Binding="{Binding Name}" />
            <mt:DataGridTextColumn Width="200" Header="Artists" 
                  Binding="{Binding Artist}" />
            <mt:DataGridTextColumn Width="200" Header="Artists" 
                  Binding="{Binding Album}" />
        </mt:DataGrid.Columns>
    </mt:DataGrid>
</UserControl>
