<UserControl
    x:Class="Bungalow.Controls.PlaylistControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bungalow="using:Bungalow.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel Orientation="Vertical" Padding="10">
        <StackPanel Orientation="Horizontal">
            <controls:ImageEx Width="128" Margin="0 0 18 0" Height="128" Source="{x:Bind Playlist.ImageUrl}" />
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Bind Playlist.Name}" TextWrapping="Wrap" />
                <TextBlock Text="{x:Bind Playlist.Owner.Id}" TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
        <bungalow:TrackContext Tracks="{x:Bind Playlist.Tracks}" />
    </StackPanel>
</UserControl>
